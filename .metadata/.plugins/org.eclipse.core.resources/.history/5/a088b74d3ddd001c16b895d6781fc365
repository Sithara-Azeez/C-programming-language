#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float n1,n2,choice,result;

	setbuf(stdout,NULL);
	printf("Enter 2 numbers:");
	scanf("%d%d",&n1,&n2);
	printf("Enter your Choice");
	printf("\n1 for Addition \n 2 for Substration \n 3 for Multiplication \n 4 for Division");
	scanf("%d",&choice);
	if(choice==1){
		result=n1+n2;
		printf("sum is %d",result);
	}
	else if(choice==2){
		result=n1-n2;
		printf("%d is the ans",result);
	}
	else if(choice==3){
		result=n1*n2;
		printf("%d is mul",result);
	}
	else if(choice==4){
		result=n1/n2;
		printf("%f is div",result);
		}
	else{
		printf("You re fooollll");
	}
	return EXIT_SUCCESS;
}
