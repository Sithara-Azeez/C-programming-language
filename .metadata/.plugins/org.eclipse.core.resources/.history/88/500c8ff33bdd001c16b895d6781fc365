#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int n1,n2,choice,sum,sub,mul,div;
	setbuf(stdout,NULL);
	printf("Enter 2 numbers:");
	scanf("%d%d",&n1,&n2);
	printf("Enter your Choice");
	printf("1 for Addition \n 2 for Substration \n 3 for Multiplication \n 4 for Division");
	scanf("%d",&choice)
	if(choice==1){
		sum=n1+n2;
		printf("sum is %d",sum);
	}
	else if(choice==2){
		sub=n1-n2;
		printf("%d is the ans",sub);
	}
	else if(choice==3){
		mul=n1*n2;
		printf("%d is mul",mul);
	}
	else if(choice==4){
			div=n1/n2;
			printf("%d is div",div);
		}
	return EXIT_SUCCESS;
}
