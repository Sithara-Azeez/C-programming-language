#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float mark;
	setbuf(stdout,NULL);
	printf("enter your grade");
	scanf("%d",&mark);
	if(mark>=50){
		printf("you've passed");
	}else{
		printf("you've failed");
	}

		return EXIT_SUCCESS;
}
