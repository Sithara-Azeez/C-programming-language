#include <stdio.h>
#include <stdlib.h>

int main(void) {
	float num2,num3,si;
	int num1;
	setbuf(stdout,NULL);
	printf("enter three numbers");
	scanf("%d%f%f",&num1,&num2,&num3);
	si=(num1*num2*num3)/100;
	printf("your simple interest is %f",si);

		return EXIT_SUCCESS;
}
